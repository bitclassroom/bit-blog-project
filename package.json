{
    "name": "bit-show-react",
    "version": "1.0.0",
    "description": "BIT Blog SPA - Building a React Based Electron App",
    "private": true,
    "author": "Marko Arsic <marsicdev@gmail.com>",
    "main": "public/electron.js",
    "homepage": "./",
    "license": "MIT",
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --env=jsdom",
        "electron": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
        "eject": "react-scripts eject",
        "precommit": "pretty-quick --staged",
        "clean": "rm -rf node_modules/ && yarn cache clean",
        "reset": "rm -rf node_modules/ && yarn cache clean && yarn"
    },
    "dependencies": {
        "axios": "^0.18.0",
        "electron-is-dev": "^1.0.1",
        "lodash": "^4.17.11",
        "materialize-css": "^1.0.0",
        "react": "^16.7.0-alpha.2",
        "react-dom": "^16.7.0-alpha.2",
        "react-images": "^0.5.19",
        "react-router-dom": "^4.3.1",
        "react-slick": "^0.23.2",
        "slick-carousel": "^1.8.1"
    },
    "devDependencies": {
        "husky": "^1.3.1",
        "prettier": "^1.15.3",
        "pretty-quick": "^1.8.0",
        "concurrently": "^4.1.0",
        "cross-env": "^5.2.0",
        "electron": "^4.0.1",
        "electron-devtools-installer": "^2.2.4",
        "react-scripts": "2.1.3",
        "wait-on": "^3.2.0"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ]
}
